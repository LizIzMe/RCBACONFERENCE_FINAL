@{
    ViewData["Title"] = "Select User Role";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-dark">Welcome to RCBA Conference</h1>
        <p class="text-muted">Please select your role to continue</p>
    </div>

    <div class="row justify-content-center">
        <!-- Researcher Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle" style="font-size: 3rem; color: #6c757d;"></i>
                    </div>
                    <h5 class="card-title fw-bold">Researcher</h5>
                    <p class="card-text text-muted">Access your research dashboard and manage your paper submissions.</p>
                    <a href="@Url.Action("HomeResearcher", "Researcher")" class="btn btn-primary w-100">Enter as Researcher</a>
                </div>
            </div>
        </div>

        <!-- Evaluator Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-check-circle" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <h5 class="card-title fw-bold">Evaluator</h5>
                    <p class="card-text text-muted">Review and evaluate submitted papers for the conference.</p>
                    <a href="@Url.Action("HomeEvaluator", "Evaluator")" class="btn btn-success w-100">Enter as Evaluator</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <p class="text-muted small">
            Please select the role that matches your assigned permissions.
            Contact the administrator if you have any issues accessing your role.
        </p>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card-title {
            color: #343a40;
        }

        .btn-primary {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #198754;
        }
    </style>
}
