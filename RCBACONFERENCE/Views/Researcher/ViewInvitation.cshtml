@model IEnumerable<RCBACONFERENCE.Models.EvaluatorInfo>
@{
    Layout = "_LayoutResearcher";
}
<head>
    <title>My Invitations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>

<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
    <div id="billboard" class="py-5">
        <div class="container text-center my-5">
            <h2 class="fw-bold mb-5" style="color: #850000; margin-top:-50px">Invitation</h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <p>You have no pending invitations.</p>
                </div>
            }
            else
            {
                <div class="bg-light-gray" style="width: 1000px; padding: 20px; max-height: 490px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);border-radius:12px; margin:auto">
                    @foreach (var invitation in Model)
                    {
                        <p class="mb-4">
                            <strong>You have been invited by the chief to become an evaluator.</strong>
                        </p>
                        @if (invitation.Status == "Pending")
                        {
                            <form asp-action="AcceptInvitation" method="post" style="display: inline;">
                                <input type="hidden" name="evaluatorId" value="@invitation.EvaluatorId" />
                                <button type="submit" class="btn btn-success me-2">Accept</button>
                            </form>
                            <form asp-action="RejectInvitation" method="post" style="display: inline;">
                                <input type="hidden" name="evaluatorId" value="@invitation.EvaluatorId" />
                                <button type="submit" class="btn btn-danger">Reject</button>
                            </form>
                        }
                        else
                        {
                            @if (@invitation.Status == "Accepted")
                            {
                                <p>Status: <span class="badge bg-success">Accepted</span></p>
                            }
                            else
                            {
                                <p>Status: <span class="badge bg-danger">Rejected</span></p>
                            }
                        }
                    }
                </div>
            }
        </div>
    </div>
</body>
