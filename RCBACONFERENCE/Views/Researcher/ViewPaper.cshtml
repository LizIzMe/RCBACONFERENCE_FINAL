@model IEnumerable<RCBACONFERENCE.Models.UploadPaperInfo>
@{
    Layout = "_LayoutResearcher";
}
<head>
    <title>My Submissions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>

<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
    <div id="billboard" class="py-4 bg-light-gray"
         style="background-image: url(/images/banner-image-bg.png); background-size: cover; background-repeat: no-repeat; background-position: center;">
        <div class="container my-5">
            <h2 class="text-center fw-bold mb-4" style="color: #850000;">Your Uploaded Papers</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center">
                    <p>You haven't uploaded any papers yet.</p>
                </div>
            }
            else
            {
                <div class="table-responsive shadow rounded" style="background: white; border-radius: 10px; overflow: hidden;">
                    <table class="table table-striped align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th class="text-center">Title</th>
                                <th class="text-center">Event</th>
                                <th class="text-center">Authors</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paper in Model)
                            {
                                <tr>
                                    <td class="text-truncate" title="@paper.Title">
                                        @paper.Title
                                    </td>
                                    <td class="text-center">@paper.ResearchEvent?.EventName</td>
                                    <td class="text-center">
                                        <div>
                                            <span>@paper.Author</span>
                                            @if (!string.IsNullOrWhiteSpace(@paper.Authors))
                                            {
                                                foreach (var coAuthor in @paper.Authors.Split(','))
                                                {
                                                    <br />
                                                    <span>@coAuthor.Trim()</span>
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @((@paper.Status == "Approved") ? "bg-success" : (@paper.Status == "Pending") ? "bg-warning text-dark" : "bg-danger")">
                                            @paper.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="ViewDocument" asp-route-id="@paper.UploadPaperID" class="btn btn-primary btn-sm" target="_blank">
                                            <i class="bi bi-file-earmark-text"></i> View Document
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</body>
