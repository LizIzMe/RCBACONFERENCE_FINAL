@{

    ViewData["Title"] = "Researcher Dashboard";

    Layout = "_LayoutResearcher";

}
<!DOCTYPE html>
<html>
<head>
    <title>Researcher's Home</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div id="billboard" class="position-relative d-flex align-items-center py-1 bg-light-gray"
         style="background-image: url(/images/banner-image-bg.png); background-size: cover; background-repeat: no-repeat; background-position: center;">

        <div class="container">
            <div class="row d-flex flex-column-reverse flex-md-row align-items-center">
                <div class="col-md-4 offset-md-1 mt-5 mt-md-0 text-center text-md-start">
                    <div class="banner-content">
                        <p>Welcome to</p>
                        <h2 style="font-family: 'Montserrat', sans-serif;">PUP RMO's Conference Website</h2>
                        <p>Managed by RMO's Center for Research Dissemination and Linkages</p>
                    </div>
                </div>
                <div class="col-md-6 text-center" style="margin-left: 50px;">
                    <div class="image-holder">
                        <img src="/images/pylon.png" class="img-fluid" alt="banner">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
</body>
</html>


