@model RCBACONFERENCE.Models.UploadPaperInfo

@{

    ViewBag.Title = "Evaluate Paper";
    Layout = "_LayoutEvaluator";
}
<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
    <div id="billboard" class="position-relative d-flex align-items-center py-1 bg-light-gray"
         style="background-image: url(/images/banner-image-bg.png); background-size: cover; background-repeat: no-repeat; background-position: center;">
        <div class="container mt-5">
            <h2 class="text-center fw-bold text mb-4">Evaluate Paper: @Model.Title</h2>
            <div class="row">
  
        <form asp-action="SubmitEvaluation" method="post">
            <input type="hidden" name="UploadPaperID" value="@Model.UploadPaperID" />

            <!-- Scientific/Technical Novelty -->
            <div class="form-group">
                <label class="text fw-bold">Scientific/Technical Novelty:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="ScientificNovelty" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Significance of Contribution -->
            <div class="form-group">
                <label class="text fw-bold">Significance of Contribution:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="SignificanceContribution" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Technical Quality/Rigor -->
            <div class="form-group">
                <label class="text fw-bold">Technical Quality/Rigor:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="TechnicalQuality" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Depth of Research -->
            <div class="form-group">
                <label class="text fw-bold">Depth of Research:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="DepthResearch" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Clarity of Presentation -->
            <div class="form-group">
                <label class="text fw-bold">Clarity of Presentation:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="ClarityPresentation" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Relevance to Conference Theme -->
            <div class="form-group">
                <label class="text fw-bold">Relevance to Conference Theme:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="RelevanceTheme" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Originality of Approach -->
            <div class="form-group">
                <label class="text fw-bold">Originality of Approach:</label>
                @for (int i = 1; i <= 5; i++)

                {
                    <div>
                        <input type="radio" name="OriginalityApproach" value="@i" required /> @i
                    </div>
                }
            </div>

            <!-- Comments -->
            <div class="form-group">
                <label class="text fw-bold"for="Comments">Comments:</label>
                <textarea id="Comments" name="Comments" class="form-control" rows="5" placeholder="Enter your evaluation comments here" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit Evaluation</button>
        </form>
    </div>
</div>
</div>
</body>