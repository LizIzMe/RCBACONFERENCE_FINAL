@model RCBACONFERENCE.Models.UploadPaperInfo

@{
    ViewBag.Title = "Evaluate Paper";
    Layout = "_LayoutEvaluator";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>



<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
    <div class="container mt-5">
        <h2 class="text-center fw-bold text mb-4">Evaluate Paper: @Model.Title</h2>
        <div class="row">
            <!-- Display PDF on the left -->
            <div class="col-md-6">
                <iframe src="@Url.Action("GetResearchPaper", "Evaluator", new { id = Model.UploadPaperID })"
                        style="width: 100%; height: 700px;"
                        frameborder="0">
                </iframe>
            </div>

            <!-- Evaluation Form on the right -->
            <div class="col-md-6">
                <form asp-action="SubmitEvaluation" method="post">
                    <input type="hidden" name="UploadPaperID" value="@Model.UploadPaperID" />

                    <!-- Evaluation Criteria -->
                    @foreach (var criterion in new[] {
                    "Scientific/Technical Novelty",
                    "Significance of Contribution",
                    "Technical Quality/Rigor",
                    "Depth of Research",
                    "Clarity of Presentation",
                    "Relevance to Conference Theme",
                    "Originality of Approach"
                    })
                    {
                        <div class="form-group">
                            <label class="text fw-bold">@criterion:</label>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div>
                                    <input type="radio" name="@criterion.Replace(" ", "")" value="@i" required /> @i
                                </div>
                            }
                        </div>
                    }

                    <!-- Comments -->
                    <div class="form-group">
                        <label class="text fw-bold" for="Comments">Comments:</label>
                        <textarea id="Comments" name="Comments" class="form-control" rows="5" placeholder="Enter your evaluation comments here" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-success mt-3">Submit Evaluation</button>
                </form>
            </div>
        </div>
    </div>
</body>
