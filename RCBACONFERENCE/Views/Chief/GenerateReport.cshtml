@{
    ViewData["Title"] = "Generate Report";
    Layout = "_LayoutChief";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>

<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; color: #333; margin-top:-90px;">
    <div class="bg-light-gray" style="width: 1000px; padding: 20px; max-height: 490px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);border-radius:12px">
        <h2 style="text-align: center; font-weight: 800; font-size: 4rem; margin-bottom: 20px; color: #850000;font-family: 'Montserrat', sans-serif">Generate Report</h2>
        <form asp-controller="Chief" asp-action="GenerateReport" method="post" class="mb-lg-4" style="display: flex; flex-direction: column; gap: 15px;">

            <div style="display: flex; flex-direction: column;">
                <label for="fileName" style="font-weight: 600; font-size: 0.9rem; margin-bottom: 5px;">File Name</label>
                <input type="text" id="fileName" name="fileName" required
                       style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
            </div>

            <div style="display: flex; flex-direction: column;">
                <label for="reportType" style="font-weight: 600; font-size: 0.9rem; margin-bottom: 5px;">Report Type</label>
                <select id="reportType" name="reportType" required
                        style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
                    <option value="Receipts">Receipts</option>
                    <option value="ResearchPapers">Research Papers</option>
                </select>
            </div>

            <div style="display: flex; flex-direction: column;">
                <label for="researchEventId" style="font-weight: 600; font-size: 0.9rem; margin-bottom: 5px;">Research Event</label>
                <select id="researchEventId" name="researchEventId" required
                        style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;">
                    @foreach (var researchEvent in ViewBag.ResearchEvents)
                    {
                        <option value="@researchEvent.ResearchEventId">@researchEvent.EventName</option>
                    }
                </select>
            </div>

            <button type="submit" class="mt-3"
                    style="background-color: #850000; color: white; padding: 12px; border: none; border-radius: 12px; font-size: 1rem; font-weight: bold; cursor: pointer; transition: background-color 0.3s;">
                Generate Report
            </button>
        </form>
    </div>
</div>