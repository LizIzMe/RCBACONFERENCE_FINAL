@{
    Layout = "_LayoutChief";
}


<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
    <div id="billboard" class="position-relative d-flex align-items-center py-1 bg-light-gray"
         style="background-image: url(/images/banner-image-bg.png); background-size: cover; background-repeat: no-repeat; background-position: center;">
        <div class="container mt-5">
            <h2>Invite Evaluators</h2>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["ErrorMessage"]
                </div>
            }
            <div class="row">
                <form method="post" action="/Chief/ProcessInvitation">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var researcher in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="selectedResearchers" value="@researcher.UserId" />
                                    </td>
                                    <td>@researcher.FullName</td>
                                    <td>@researcher.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary">Invite Selected</button>
                </form>

                <h2 class="m-t5">Invited Evaluators</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invited in (IEnumerable<InvitedEvaluatorViewModel>)ViewData["InvitedResearchers"])
                        {
                            <tr>
                                <td>@invited.FullName</td>
                                <td>@invited.Email</td>
                                <td>@invited.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>
</body>