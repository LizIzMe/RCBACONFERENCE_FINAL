@{
    Layout = "_LayoutChief";
}
<head>
    <link rel="stylesheet" type="text/css" href="/css/style.css" asp-append-version="true">
</head>
<body style="font-family: 'Montserrat', sans-serif; overflow-y: auto;">
        <div class="container mt-5" style="margin-top:-20px;">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["ErrorMessage"]
                </div>
            }

            <div class="row">
            <div class="mb-5" style="border-radius:12px; max-width:1500px;">
                <form method="post" action="/Chief/ProcessInvitation">
                <div class="header-invited d-inline-flex">
                    <h2>Invite Evaluators</h2>
                    <button type="submit" class="btn btn-primary" style="margin-left:575px; margin-top:6px; font-weight:500">Invite Selected</button>
                </div>
                    <div class="container mb-5" style="width:1280px; max-width:1280px; border-radius:12px; border: 1px solid #ddd; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);max-height:500px;overflow-y:auto">
                        <table class="table bg-light">
                            <thead>
                                <tr>
                                    <th class="fw-bold">Select</th>
                                    <th class="fw-bold">Name</th>
                                    <th class="fw-bold">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var researcher in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedResearchers" value="@researcher.UserId" />
                                        </td>
                                        <td>@researcher.FullName</td>
                                        <td>@researcher.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </<div>

                <div class="mb-5" style="border-radius:12px; max-width:1500px;max-height:300px">
                <h2 class="">Invited Evaluators</h2>
               <div class="container mb-5" style="width:1280px; max-width:1280px; border-radius:12px; border: 1px solid #ddd; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);max-height:500px;overflow-y:auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="fw-bold">Name</th>
                            <th class="fw-bold">Email</th>
                            <th class="fw-bold">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invited in (IEnumerable<InvitedEvaluatorViewModel>)ViewData["InvitedResearchers"])
                        {
                            <tr>
                                <td>@invited.FullName</td>
                                <td>@invited.Email</td>
                                <td>@invited.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
            </div>
    </div>
</div>
</body>